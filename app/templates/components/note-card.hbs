<div class="panel-body scrollable-panel" id="panel-id">
{{#each (note-filter filteredModel getstatus) as |note|}}
  <div class="card" id="card-id-{{note.id}}">
      <ul class="list-group list-group-flush  card-hover">
    <li class="list-group-item description-overflow">    <label>Title: </label><br />{{note.title}}</li>
    <li class="list-group-item description-overflow">    <label>Description: </label><br/>{{note.description}}</li>
    <li class="list-group-item">    <label>Date: </label><br />{{note.date}}</li>
    <p>
    <div class="dropdown">
      <button  class="list-group-item"type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <label>Change Status :</label> {{note.status}}
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <p><a class="dropdown-item" {{action 'updateNote' "doing" note}}>DOING</a></p>
        <p><a class="dropdown-item"{{action 'updateNote' "done" note}}>DONE</a></p>
        <p><a class="dropdown-item"{{action 'deleteNote'  note.id}}>DELETE</a></p>
      </div>
    </div>
</p>
  </ul>
  </div>
  {{else}}
  <div>
  </div>
{{/each}}
</div>
<div class="bottom-data-entry">
  <form id={{id-generator "myForm" getstatus}}>
{{input type="text" placeholder="title" value=title1 class="form-control"}}
{{input type="textarea" placeholder="description" class="form-control" value=description1}}
{{input type="date" placeholder="date" class="form-control" value=date1}}
<button {{action 'sendData' title1 description1 date1 getstatus }} class="btn btn-lg btn-success bt-space-left">Create Note </button>
</form>
</div>
